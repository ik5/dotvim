snippet ifnvim "if has('nvim')"
if has('nvim')
  ${1:action}
endif
endsnippet

snippet ifnnvim "if !has('nvim')"
if !has('nvim')
	${1:action}
endif
endsnippet

snippet pplug "vim-plug Paste Plugin" b
Plug '${1:`!v substitute(@+, '\([^\/]*\/\/[^\/]*\/\)\([^/]*\/[^/]*\)\(.*\)', '\2', '' )`}'
endsnippet
